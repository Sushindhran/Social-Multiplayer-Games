<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:AbsolutePanel ui:field="absolutePanel">
		<g:VerticalPanel width="450px" height="800px">
			<g:HorizontalPanel width="200" height="30px"
				ui:field="opponentArea" />
			<g:AbsolutePanel height="510px" width="480px"
				ui:field="boardArea" />
			<g:HorizontalPanel width="200" height="30px"
				ui:field="playerArea" />
			<g:HorizontalPanel width="100px" height="30px"
				ui:field="selectedArea" />
			<g:HorizontalPanel height="50px">
				<g:Button ui:field="makeMoveButton" text="Confirm Move" />
				<g:Button ui:field="passButton" text="Pass" />
				<g:Button ui:field="exchangeButton" text="Exchange" />
			</g:HorizontalPanel>
		</g:VerticalPanel>
		
	</g:AbsolutePanel>
</ui:UiBinder>